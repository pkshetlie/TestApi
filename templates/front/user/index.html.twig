{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Liste des utilisateurs et leurs taches</h1>
        <p class="lead">Ils sont tous l√†, pas de pagination</p>
        <hr class="my-4">
        <div class="row">
            <div class="col-md-6">
                <h2>Les utilisateurs</h2>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ url('task_get_list',{id: user.id}) }}"
                                   class="getlist btn btn-sm btn-secondary"><i class="fas fa-list"></i></a>
                                <a data-user="{{ user.id }}" href="{{ url('task_add') }}"
                                   class="add-task-btn btn btn-sm btn-success"><i class="fas fa-plus"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-6">
                <h2>Les taches </h2>
                <table class="table table-bordered table-striped" id="tasks">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="3">Cliquez le bouton <i class="fas fa-list"></i> d'un utilisateur</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('user') }}
{% endblock %}